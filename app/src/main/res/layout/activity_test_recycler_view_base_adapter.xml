<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cjq.tool.qqtoolbox.activity.TestRecyclerViewBaseAdapterActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_move"
        android:text="移动"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_label_move_from"
        android:text="start"
        app:layout_constraintLeft_toRightOf="@id/btn_move"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_move"/>
    <EditText
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_move_from"
        app:layout_constraintLeft_toRightOf="@id/tv_label_move_from"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_move"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_label_move_count"
        android:text="count"
        app:layout_constraintLeft_toRightOf="@id/et_move_from"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_move"/>
    <EditText
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:id="@+id/et_move_count"
        android:text="1"
        app:layout_constraintLeft_toRightOf="@id/tv_label_move_count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_move"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_label_move_to"
        android:text="to"
        app:layout_constraintLeft_toRightOf="@id/et_move_count"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_move"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_move_to"
        app:layout_constraintLeft_toRightOf="@id/tv_label_move_to"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_move"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_delete_item_before_selected"
        android:text="删除(选中项前)"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_move"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_delete_item_selected"
        android:text="删除(选中项)"
        android:onClick="onClick"
        app:layout_constraintLeft_toRightOf="@id/btn_delete_item_before_selected"
        app:layout_constraintBottom_toTopOf="@id/btn_move"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_delete_item_after_selected"
        android:text="删除(选中项后)"
        android:onClick="onClick"
        app:layout_constraintLeft_toRightOf="@id/btn_delete_item_selected"
        app:layout_constraintBottom_toTopOf="@id/btn_move"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_item_before_selected"
        android:text="添加(选中项前)"
        android:onClick="onClick"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_delete_item_before_selected"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_add_item_after_selected"
        android:text="添加(选中项后)"
        android:onClick="onClick"
        app:layout_constraintLeft_toRightOf="@id/btn_add_item_before_selected"
        app:layout_constraintBottom_toTopOf="@id/btn_delete_item_before_selected"/>

    <android.support.v7.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/rv_test_base_adapter"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_add_item_before_selected"/>

</android.support.constraint.ConstraintLayout>
