<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cjq.tool.qqtoolbox.activity.TcpDebugActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_local_port"
        android:text="Port"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_accept"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_accept"
        android:text="等待客户端连接"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_launch_server"
        android:text="启动服务器"
        android:onClick="onClick"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_accept"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/et_local_port"
        android:hint="请输入本地端口号"
        app:layout_constraintLeft_toRightOf="@id/tv_local_port"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/btn_launch_server"
        app:layout_constraintBottom_toBottomOf="@id/btn_accept"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_connect"
        android:text="连接服务器"
        android:onClick="onClick"
        app:layout_constraintTop_toBottomOf="@id/btn_accept"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_server_ip"
        android:text="IP"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_connect"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_server_port"
        android:text="Port"
        app:layout_constraintLeft_toRightOf="@id/tv_server_ip"
        app:layout_constraintRight_toLeftOf="@id/btn_connect"
        app:layout_constraintBaseline_toBaselineOf="@id/btn_connect"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/et_server_ip"
        android:hint="请输入服务器IP"
        app:layout_constraintLeft_toRightOf="@id/tv_server_ip"
        app:layout_constraintTop_toBottomOf="@id/btn_accept"
        app:layout_constraintRight_toLeftOf="@id/tv_server_port"
        app:layout_constraintBottom_toBottomOf="@id/btn_connect"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/et_server_port"
        android:hint="请输入服务器端口"
        app:layout_constraintLeft_toRightOf="@id/tv_server_port"
        app:layout_constraintRight_toLeftOf="@id/btn_connect"
        app:layout_constraintTop_toBottomOf="@id/btn_accept"
        app:layout_constraintBottom_toBottomOf="@id/btn_connect"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_receive"
        android:text="接收"
        app:layout_constraintTop_toBottomOf="@id/btn_connect"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_send"
        android:text="发送"
        android:onClick="onClick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_send"
        android:text="发送"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_receive"
        app:layout_constraintBottom_toTopOf="@id/btn_send"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tv_reception"
        android:isScrollContainer="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_receive"
        app:layout_constraintBottom_toTopOf="@id/tv_send"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/tv_emission"
        android:isScrollContainer="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_send"
        app:layout_constraintBottom_toTopOf="@id/btn_send"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/et_emission"
        android:hint="请输入发送数据"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_emission"
        app:layout_constraintRight_toLeftOf="@id/btn_send"
        app:layout_constraintBottom_toBottomOf="@id/btn_send"/>

</android.support.constraint.ConstraintLayout>
